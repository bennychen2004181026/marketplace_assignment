<div>
  <div class="pull-right">
    <%= link_to "New product", new_admin_product_path, class: "btn btn-primary" %>
  </div>

  <h1>
    Product(<%= @products.total_entries %>)
  </h1>
</div>

<div>
  <table class="table table-striped">
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>UUID</th>
      <th>Price</th>
      <th>Inventory</th>
      <th>Status</th>
      <th></th>
    </tr>

    <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td><%= product.title %></td>
        <td><%= product.uuid %></td>
        <td><%= product.price %></td>
        <td><%= product.amount %></td>
        <td><%= product.status %></td>
        <td align="right">
          <%= link_to "Edit", edit_admin_product_path(product) %> 
          <%= link_to "Delete", admin_product_path(product), method: :delete, 'data-confirm': "Are you sure?" %>
          <%= link_to "Image Manage", admin_product_product_images_path(product_id: product) %>
        </td>
      </tr>
    <% end -%>
  </table>

  <%= will_paginate @products %>
</div>
